# .env.development.example - DEVELOPMENT ENVIRONMENT
# Copy this to .env.development and fill in your actual values
# Used by docker-compose.yml (default development setup)

# Database Configuration
POSTGRES_DB=samaanai_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=devpassword123

# JWT Configuration (NOT secure - for development only!)
JWT_SECRET=dev-jwt-secret-not-for-production-12345
JWT_REFRESH_SECRET=dev-refresh-secret-not-for-production-67890

# Plaid Configuration (Sandbox)
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-sandbox-secret
PLAID_ENV=sandbox

# API Configuration
PORT=8080
API_BASE_URL=http://localhost:8080

# CORS (allow all in development)
ALLOWED_ORIGINS=http://localhost:19006,http://localhost:3000,http://localhost:8081

# Logging
LOG_LEVEL=debug

# Email Configuration (SendGrid SMTP)
# Sign up at https://signup.sendgrid.com/ for free 100 emails/day
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASS=SG.paste-your-sendgrid-api-key-here
FROM_EMAIL=your-verified-email@example.com
APP_NAME=Samaanai

# Push Notifications (Expo)
# Get token from: https://expo.dev/accounts/[account]/settings/access-tokens
EXPO_ACCESS_TOKEN=your-expo-access-token-here

# Note: These are DEVELOPMENT values
# Never use these in production!
